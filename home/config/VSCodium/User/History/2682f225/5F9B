DIRS   := utils V0-1 V0-2 V0-3 V1-1
PREFIX := src

SUBDIRS = $(addprefix $(PREFIX)/, $(DIRS))
CLNDIRS = $(addprefix $(PREFIX)/, $(DIRS))

.PHONY: build $(SUBDIRS) clean

build: $(SUBDIRS)

$(SUBDIRS):
	@$(MAKE) -C $@ --no-print-directory $(MAKECMDGOALS)


clean: $(SUBDIRS)
	@rmdir --ignore-fail-on-non-empty bin