# simple RandR interface that makes use of configuration files
# helping with the initial setup of different multimonitor layouts

PREFIX := ${HOME}/.local/bin/dwm
CC     := cc
CFLAGS := -Wall -Wextra -Werror -Wno-depreceated-declerations -Os
LFLAGS := -lX11

all: xrandr-setup

xrandr-setup:
	$(CC) -o $@ main.c ${CFLAGS} ${LGLAGS}

clean:
	#@echo "cleaning xrandr-setup"
	rm -f xrandr-setup

install: xrandr-setup
#echo "installing xrandr-setup"
	mkdir -p $(PREFIX)
	cp xrandr-setup $(PREFIX)/

uninstall:
@#echo "uninstalling xrandr-setup"
	rm -f $(PREFIX)/xrandr-setup

