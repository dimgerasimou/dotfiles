#!/bin/sh
#
# Simple script that returns local ip address and network status.
#
# Author: Dimitris Gerasimou <https://github.com/dimgerasimou>
#ğŸ–§ ğŸ–¥

ipadress="$(nmcli | grep inet4 | awk --field-separator=/ '{print $1}')"
ipadress=${ipadress#*inet4 }
ipadress=${ipadress%$'\n'*}
ipadress="  $ipadress"

if [[ $(cat /sys/class/net/e*/operstate) == "up" ]]; then
	netstatus="ï›¿"
elif [[ $(cat /sys/class/net/w*/operstate) == "up" ]]; then
	netstatus="ï‡«"
else
	netstatus="ïª©"
	ipadress=""
fi

echo "$netstatus$ipadress"
