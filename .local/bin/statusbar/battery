#!/bin/sh
#
# Script that outputs battery percentage and charging status as an emoji.
#
# Author: Dimitris Gerasimou <https://github.com/dimgerasimou>

capacity=$(cat /sys/class/power_supply/BAT1/capacity)
status=$(cat /sys/class/power_supply/BAT1/status)

# if [[ "$stat" = "Charging" ]]; then
# 	icon="🔌"
# else
# 	icon="🔋"
# fi

if [ $status != "Charging" ]; then
	case 1 in
		$(( $capacity <= 10 ))) status="" ;;
		$(( $capacity <= 20 ))) status="" ;;
		$(( $capacity <= 30 ))) status="" ;;
		$(( $capacity <= 40 ))) status="" ;;
		$(( $capacity <= 50 ))) status="" ;;
		$(( $capacity <= 60 ))) status="" ;;
		$(( $capacity <= 70 ))) status="" ;;
		$(( $capacity <= 80 ))) status="" ;;
		$(( $capacity <= 90 ))) status="" ;;
		 				     *) status="" ;;
	esac
elif [ $status = "C" ]; then
	case 1 in
		$(( $capacity <= 10 ))) status="" ;;
		$(( $capacity <= 20 ))) status="" ;;
		$(( $capacity <= 30 ))) status="" ;;
		$(( $capacity <= 40 ))) status="" ;;
		$(( $capacity <= 50 ))) status="" ;;
		$(( $capacity <= 60 ))) status="" ;;
		$(( $capacity <= 70 ))) status="" ;;
		$(( $capacity <= 80 ))) status="" ;;
		$(( $capacity <= 90 ))) status="" ;;
							 *)	status="" ;;
	esac
fi

echo "$status $capacity%"
