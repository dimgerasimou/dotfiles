#!/bin/sh
#
# Script that outputs battery percentage and charging status. ASCII
#
# Author: Dimitris Gerasimou <dimgerasimou@gmail.com> http://github.com/dimgerasimou
#

capacity=$(cat /sys/class/power_supply/BAT1/capacity)
stat=$(cat /sys/class/power_supply/BAT1/status)

batstatus=""

if	[[ "$stat" = "Discharging" ]]; then
	batstatus="D"
elif [[ "$stat" = "Not charging" ]]; then
	batstatus="NC"
elif [[ "$stat" = "Charging" ]]; then
	batstatus="C"
elif [[ "$stat" = "Unknown" ]]; then
	batstatus="U"
elif [[ "$stat" = "Full" ]]; then
	batstatus="F"
fi

echo "Power:"$capacity"% "$batstatus""